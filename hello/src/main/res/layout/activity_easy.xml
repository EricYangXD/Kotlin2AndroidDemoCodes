<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:text="@string/tv_hello_text"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"/>

    <Button
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:text="@string/btn_click_text"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"/>

    <Button
        android:id="@+id/btn_click_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:text="@string/btn_click_long_text"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"/>

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:text="@string/btn_toast_text"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"/>

    <Button
        android:id="@+id/btn_toast_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:text="@string/btn_toast_long_text"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"/>

</LinearLayout>
